<UserControl x:Class="LettreMotivGenerator.MVVM.View.MyInfosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LettreMotivGenerator.MVVM.View"
             xmlns:custom="clr-namespace:LettreMotivGenerator.Core"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="Mes Infos"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0, 10, 0, 50"
                   FontFamily="../../Font/#Gabarito"/>
        
        <StackPanel Orientation="Horizontal" Width="800" Height="350">
            <Grid Width="500">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            
                <TextBox Grid.Column="0" 
                         Grid.Row="0" 
                         Height="40"
                         Margin="0, 0, 0, 0"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="Nom"
                         x:Name="LastNameBox"
                         />
                <TextBox Grid.Column="1" 
                         Grid.Row="0" 
                         Height="40"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="PrÃ©nom"
                         x:Name="FirstNameBox"
                />
                <TextBox Grid.ColumnSpan="2" 
                         Grid.Column="0"
                         Grid.Row="1" 
                         Height="40"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="Email"
                         x:Name="MailBox"
                />
                <TextBox Grid.ColumnSpan="2" 
                         Grid.Column="0"
                         Grid.Row="2" 
                         Height="40"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="Adresse"
                         x:Name="StreetBox"
                />
                <TextBox Grid.Column="0" 
                         Grid.Row="3" 
                         Height="40"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="Ville"
                         x:Name="CityBox"
                />
                
                <TextBox Grid.Column="1" 
                         Grid.Row="3" 
                         Height="40"
                         VerticalAlignment="Center"
                         Style="{StaticResource ModernTextBox}" 
                         custom:TextBoxCustomProperties.CustomText="Code Postal"
                         x:Name="ZipCodeBox"
                />
                
                <Button Grid.Row="4" 
                        Grid.ColumnSpan="2" 
                        Grid.Column="0"
                        Content="Sauvegarder"
                        Style="{StaticResource ModernButton}"
                        x:Name="SaveButton"
                        Click="SaveButton_OnClick">
                        
                </Button>

            </Grid>
            
            <Border Height="250" 
                    Width="300" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0, 12, 0, 0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1,2">
                        <GradientStop Color="#ffc520" Offset="0.0"/>
                        <GradientStop Color="#E0AD1D" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0, 0, 300, 250"/>
                </Border.Clip>
                
                <Grid>
                    <TextBlock Text="Mes Infos"
                               Foreground="White"
                               FontFamily="../../Font/#Gabarito"
                               FontSize="28"
                               Margin="10, 10, 0, 0"
                               FontWeight="SemiBold"/>
                    <Image Source="../../Image/undraw_private-files.png"
                           Width="250"
                           VerticalAlignment="Bottom"
                           RenderTransformOrigin="0.5, 0.5"
                           >
                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="-1"></ScaleTransform>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
                
            </Border>
        </StackPanel>
        
        
    </StackPanel>
</UserControl>
